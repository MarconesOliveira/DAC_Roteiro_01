<h1 class="display-1 my-5">Bem vindo ao Mini Bios!</h1>

{{#each users}}
    <div class="card shadow-lg my-3 p3">
        <div class="card-body p-3">
            <div>
                <a class="card-title nav-link p-3" href="/users/{{getUsername this}}">
                    <h3 class="display-5">
                        {{getName this}}
                    </h3>
                </a>
            </div>
            {{#if (getBio this)}}
                <div class="card-text lead my-3">
                    {{getBio this}}        
                </div>    
            {{/if}}
        </div>
    </div>
{{/each}}